          />
          Sangam India Limited
        </a>
        <a
          href="/releaser9-dashboard"
          class="nav-link"
          style="color: white; margin-left: 800px"
          >Pending Status</a
        >
        <a href="/releaser9" class="nav-link" style="color: white"
          >Your Dashboard</a
        >
        <a href="/logout" class="nav-link" style="color: white">Logout</a>
      </div>
    </nav>
    <div class="container mt-5">
      <h4 class="text-center mb-4">Fixed Assets Requisition Form</h4>
      <form action="/submit-form" method="POST">
        <div class="row">
          <div class="col-md-3">
            <label for="employee_code" class="form-label">Employee Code</label>
            <input
              type="text"
              class="form-control small-input"
              name="employee_code"
              readonly
              value="<%=options.employee_code%>"
            />
          </div>
          <div class="col-md-3">
            <label for="plant" class="form-label">Plant</label>
            <input
              class="form-control small-input"
              id="plant"
              name="plant"
              readonly
              value="<%=options.plant%>"
            />
          </div>
          <div class="col-md-3">
            <label for="profitCenter" class="form-label">Profit Center</label>
            <input
              class="form-control small-input"
              id="profitCenter"
              name="profitCenter"
              readonly
              value="<%=options.profitCenter%>"
            />
          </div>
          <div class="col-md-3">
            <label for="dateOfRequisition" class="form-label">Date</label>
            <input
              type="text"
              class="form-control small-input"
              id="dateOfRequisition"
              name="dateOfRequisition"
              readonly
              value="<%=new Date(options.dateOfRequisition).toLocaleDateString('en-GB')%>"
            />
          </div>
          <div class="col-md-3">
            <label for="type" class="form-label">Type</label>
            <input
            type="text"
              class="form-control small-input"
              id="type"
              name="type"
              readonly
              value="<%=options.type%>"
            />
          </div>
          
          <div class="col-md-3">
            <label for="materialCode" class="form-label">Material Code</label>
            <input
              type="text"
              class="form-control small-input"
              name="materialCode"
              readonly
              value="<%=options.materialCode%>"
            />
          </div>
          <div class="col-md-3 ">
            <label for="description" class="form-label">Description</label>
            <input
              type="text"
              class="form-control small-input"
              name="description"
              readonly
              value="<%=options.description%>"
            />
          </div>
          <div class="col-md-3 ">
            <label for="qty" class="form-label">Quantity</label>
            <input
              type="text"
              class="form-control small-input"
              name="qty"
              readonly
              value="<%=options.qty%>"
            />
          </div>
          <div class="col-md-3 ">
            <label for="purchaseType" class="form-label">Purchase Type</label>
            <input
              type="text"
              class="form-control small-input"
              name="purchaseType"
              readonly
              value="<%=options.purchaseType%>"
            />
          </div>
          <div class="col-md-3 ">
            <label for="cost_center" class="form-label">Cost Center</label>
            <input
              type="text"
              class="form-control small-input"
              name="cost_center"
              readonly
              value="<%=options.cost_center%>"
            />
          </div>
          <div class="col-md-3 ">
            <label for="totalCost" class="form-label">Total Cost</label>
            <input
              type="text"
              class="form-control small-input"
              name="totalCost"
              readonly
              value="<%=options.totalCost%>"
            />
          </div>
          <div class="col-md-3 ">
            <label for="totalCost" class="form-label">Payback Period</label>
            <input
              type="text"
              class="form-control small-input"
              name="paybackPeriod"
              readonly
              value="<%=options.paybackPeriod%>"
            />
          </div>
          <div class="col-md-3">
            <label for="remarks" class="form-label">Remarks</label>
            <input
              type="text"
              class="form-control small-input"
              id="remarks"
              name="remarks"
              value="<%=options.remarks%>"
              readonly
            />
          </div>
          <div class="col-md-12 ">
            <label for="assetProcuredAgainst" class="form-label"
              >Is assets procured against replacement/ modification/ upgradation
              with earlier assets</label
            >
            <input
              class="form-control small-input"
              id="assetProcuredAgainst"
              name="assetProcuredAgainst"
              readonly
              value="<%=options.assetProcuredAgainst%>"
            />
          </div>
          <div class="col-md-12 ">
            <label for="assetsAgainstReplacement" class="form-label"
              >Name of Assets against replacement to be procure (Last detail of
              assets purchase, make, model, serial no., our asset marking
              etc)</label
            >
            <input
              type="text"
              class="form-control small-input"
              id="assetsAgainstReplacement"
              name="assetsAgainstReplacement"
              readonly
              value="<%=options.assetsAgainstReplacement%>"
            />
          </div>
          
        </div>
        <div class="container">
            <h4 class="text-center mb-4">Approvals</h4>
            <form action="" method="GET">
                <div class="row">
                    <div class="col-md-2">
                      <label for="plantHead" class="form-label">Plant Head (1100 / 1120)</label>
                      <input
                        type="text"
                         class="form-control small-input"
                          name="employee_code"
                          readonly
                        value="<%= options.releaser1_approval_status === 'Pending' ? '' : options.releaser1_approval_status %>"
                            />
                    </div>
                    <div class="col-md-2">
                        <label for="plantHead" class="form-label">Plant Head (1110)</label>
                        <input
                          type="text"
                           class="form-control small-input"
                            name="employee_code"
                            readonly
                          value="<%= options.releaser2_approval_status === 'Pending' ? '' : options.releaser2_approval_status %>"
                              />
                      </div>
                      <div class="col-md-2">
                        <label for="plantHead" class="form-label">Plant Head (1200)</label>
                        <input
                          type="text"
                           class="form-control small-input"
                            name="employee_code"
                            readonly
                          value="<%= options.releaser3_approval_status === 'Pending' ? '' : options.releaser3_approval_status %>"
                              />
                      </div>
                      <div class="col-md-2">
                        <label for="plantHead" class="form-label">Plant Head (1300)</label>
                        <input
                          type="text"
                           class="form-control small-input"
                            name="employee_code"
                            readonly
                          value="<%= options.releaser4_approval_status === 'Pending' ? '' : options.releaser4_approval_status %>"
                              />
                      </div>
                      <div class="col-md-2">
                          <label for="plantHead" class="form-label">Plant Head (1400)</label>
                          <input
                            type="text"
                             class="form-control small-input"
                              name="employee_code"
                              readonly
                            value="<%= options.releaser5_approval_status === 'Pending' ? '' : options.releaser5_approval_status %>"
                                />
                        </div>
                        <div class="col-md-2">
                          <label for="plantHead" class="form-label">Plant Head (1500/3500)</label>
                          <input
                            type="text"
                             class="form-control small-input"
                              name="employee_code"
                              readonly
                            value="<%= options.releaser6_approval_status === 'Pending' ? '' : options.releaser6_approval_status %>"
                                />
                        </div>
                        <div class="col-md-2 mt-2">
                            <label for="plantHead" class="form-label">CEO (1000/1100/1110/1120)</label>
                            <input
                              type="text"
                               class="form-control small-input"
                                name="employee_code"
                                readonly
                              value="<%= options.releaser7_approval_status === 'Pending' ? '' : options.releaser7_approval_status %>"
                                  />
                          </div>
                          <div class="col-md-2 mt-2">
                            <label for="plantHead" class="form-label">CEO (1200/1300/1400/1500)</label>
                            <input
                              type="text"
                               class="form-control small-input"
                                name="employee_code"
                                readonly
                              value="<%= options.releaser8_approval_status === 'Pending' ? '' : options.releaser8_approval_status %>"
                                  />
                          </div>
                      
                    
                    </div>
            </form>
        </div>

      

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
      $(document).ready(function () {
        let rowIdx = 1;

        $("#addRow").on("click", function () {
          rowIdx++;
          $("#materialTable tbody").append(`
                <tr>
                    <td>${rowIdx}</td>
                    <td><input type="text" class="form-control small-input" name="materialCode[]"></td>
                    <td><input type="text" class="form-control small-input" name="description[]"></td>
                    <td><input type="number" step="0.01" class="form-control small-input" name="qty[]"></td>
                    <td>
                        <select class="form-select small-input" name="purchaseType[]">
                            <option value=""  selected>Select</option>
                            <option>NEW</option>
                            <option>SECOND HAND</option>
                        </select>
                    </td>
                    <td>
                    <select
                        name="cost_center[]"
                        id="cost_center"
                        class="form-select small-input"
                        >
                  <option value=""  selected>Select</option>
                  <option value="111102801">110102801</option>
                  <option value="111102801">111102801</option>
                </select>
              </td>
                    <td><input type="number" step="0.01" class="form-control small-input" name="totalCost[]"></td>
                    <td><input type="text" class="form-control small-input" name="paybackPeriod[]"></td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm remove-row">Delete</button>
                    </td>
                </tr>
            `);
        });

        $("#materialTable").on("click", ".remove-row", function () {
          $(this).closest("tr").remove();
          rowIdx--;
          $("#materialTable tbody tr").each(function (index) {
            $(this)
              .find("td:first")
              .text(index + 1);
          });
        });
      });
    </script>
