<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pending Approvals</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        padding: 20px;
        background-color: #f8f9fa;
        font-size: smaller;
      }
      .container {
        max-width: 1200px;
        margin: auto;
      }
      .table-container {
        margin-top: 20px;
      }
      th,
      td {
        text-align: center;
        vertical-align: middle;
      }
      .btn-action {
        margin-top: 5px;
      }
      .btn-approve {
        background-color: #28a745;
        color: white;
      }
      .btn-reject {
        background-color: #dc3545;
        color: white;
      }
      .btnView {
        background-color: #8d8e8f;
        color: white;
      }
      .navbar {
        font-size: 0.9rem;
        height: 50px;
      }
      .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
      }
      .search-box {
        margin-bottom: 20px;
      }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="">
          <img
            src="https://sangamgroup.com/wp-content/uploads/2023/01/sangam_group_logo.png"
            alt="Logo"
            width="50"
            height="43"
          />
          Sangam India Limited
        </a>
        <a
          href="/releaser2-dashboard"
          class="nav-link"
          style="color: white; margin-left: 800px"
          >Pending Status</a
        >
        <a href="/releaser2" class="nav-link" style="color: white"
          >Your Dashboard</a
        >
        <a href="/logout" class="nav-link" style="color: white">Logout</a>
      </div>
    </nav>

    <div class="container mt-5">
      <h4 class="text-center">Your Dashboard</h4>

      <div class="table-container">
        <table
          id="approvalTable"
          class="table table-striped table-bordered table-hover"
        >
          <thead>
            <tr>
              <th>Plant</th>
              <th>Date Of Requisition</th>
              <th>Description</th>
              <th>Qty</th>
              <th>Total Cost</th>
              <th>Status</th>
              <th>Comments</th>
              <th>View Full Form</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(req => { %>
            <tr>
              <td><%= req.plant %></td>
              <td>
                <%= new Date(req.dateOfRequisition).toLocaleDateString('en-GB')
                %>
              </td>
              <td><%= req.description %></td>
              <td><%= req.qty %></td>
              <td><%= req.totalCost %></td>
              <td><%= req.releaser2_approval_status%></td>
              <td><%= req.releaser2_comments%></td>
              <td>
                <form action="/view/<%= req.id %>" method="get">
                  <button type="submit" class="btnView btn-action btn-sm">
                    View Form
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="pagination">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <!-- Pagination buttons will be dynamically inserted here -->
          </ul>
        </nav>
      </div>
    </div>

    <script>
      $(document).ready(function () {
        // Initialize DataTables with pagination and sorting enabled
        var table = $("#approvalTable").DataTable({
          paging: true, // Enable pagination
          ordering: true, // Enable sorting
          pageLength: 10, // Number of rows per page
          searching: true, // Keep DataTables' internal search functionality enabled
        });

        // Bind the custom search input to DataTables' search functionality
        $("#searchInput").on("keyup", function () {
          table.search(this.value).draw(); // Perform search and redraw table
        });
      });
    </script>
  </body>
</html>
