<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pending Approvals</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        /* padding: 10px; */
        background-color: #f8f9fa;
        font-size: smaller;
      }
      .container {
        max-width: 1600px;
        margin: auto;
      }
      .table-container {
        margin-top: 20px;
      }
      table {
        width: 100%;
        margin-bottom: 20px;
      }
      th,
      td {
        text-align: center;
        vertical-align: middle;
      }
      .form-inline {
        display: flex;
        flex-direction: row;
        gap: 3px;
      }
      .form-inline input {
        width: 150px;
      }
      .btn-action {
        margin-top: 5px;
      }
      .btn-approve {
        background-color: #28a745;
        color: white;
      }
      .btn-reject {
        background-color: #dc3545;
        color: white;
      }
      .small-input {
            /* width: 100px; Adjust the width as needed */
            height: 30px; /* Adjust the height as needed */
            padding: 0.2rem; /* Adjust the padding as needed */
        }
    </style>
  </head>
  <body>
    <div class="container">
      <h4 class="text-center">Pending Approvals</h4>
      <div class="table-container">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <!-- <th>ID</th> -->
              <th>Plant</th>
              <th>Profit Center</th>
              <th>Date Of Requisition</th>
              <th>Type</th>
              <th>Material Code</th>
              <th>Description</th>
              <th>Qty</th>
              <th>Purchase Type</th>
              <th>Total Cost</th>
              <th>Payback Period</th>
              <th>Status 1</th>
              <th>Status 1 Comments</th>
              <th>Status 2</th>
              <th>Status 2 Comments</th>
              <th>Status 3</th>
              <th>Status 3 Comments</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% requisitions.forEach(req => { %>
            <tr>
              <!-- <td><%= req.id %></td> -->
              <td><%= req.plant %></td>
              <td><%= req.profitCenter %></td>
              <td><%= new Date(req.dateOfRequisition).toLocaleDateString('en-GB') %></td>
              <td><%= req.type %></td>
              <td><%= req.materialCode %></td>
              <td><%= req.description %></td>
              <td><%= req.qty %></td>
              <td><%= req.purchaseType %></td>
              <td><%= req.totalCost %></td>
              <td><%= req.paybackPeriod %></td>
              <td><%= req.releaser1_approval_status %></td>
              <td><%= req.releaser1_comments %></td>
              <td><%= req.releaser2_approval_status %></td>
              <td><%= req.releaser2_comments %></td>
              <td><%= req.releaser3_approval_status %></td>
              <td><%= req.releaser3_comments %></td>
              <td>
                <div class="form-inline">
                  <form action="/approve4/<%= req.id %>" method="POST">
                    <input
                      type="text"
                      name="comments"
                      class="form-control small-input"
                      placeholder="Comments"
                    />
                    <button type="submit" class="btn btn-approve btn-action btn-sm">
                      Approve
                    </button>
                  </form>
                  <form action="/reject4/<%= req.id %>" method="POST">
                    <input
                      type="text"
                      name="comments"
                      class="form-control small-input"
                      placeholder="Comments"
                    />
                    <button type="submit" class="btn btn-reject btn-action btn-sm">
                      Reject
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
 